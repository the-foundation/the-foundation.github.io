load 'deploy' if respond_to?(:namespace) # cap2 differentiator

default_run_options[:pty] = true

set :application, 'chchspace-site'
set :repository,  "git@github.com:chchspace/site.git"

# Standard settings
set :user, 'deploy'
set :domain, 'metanation.com'
set :scm, 'git'
set :deploy_to, "/home/#{user}/#{application}"
set :deploy_via, :remote_cache
set :branch, 'master'
set :git_shallow_clone, 1
set :use_sudo, false

# Debuggery
# set :scm_verbose, true

server domain, :app, :web, :db

namespace :deploy do
  
  task :restart do
    sudo "thin restart -C /etc/thin/#{application}.yml"
  end
  
  task :start do
    sudo "thin start -C /etc/thin/#{application}.yml"
  end
  
  task :stop do
    sudo "thin stop -C /etc/thin/#{application}.yml"
  end
  
  task :migrate do
    run "cd #{current_path} && rake migrate APP_ENV=production"
  end
  
  task :default do
    update
    stop
    migrate
    start
  end
  
end
